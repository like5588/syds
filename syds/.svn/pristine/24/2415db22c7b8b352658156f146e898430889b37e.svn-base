<script type="text/javascript">
function request(paras){        
	var url = location.href;  
	var paraString = url.substring(url.indexOf("?")+1,url.length).split("&");        
	var paraObj = {}         
	for (i=0; j=paraString[i]; i++){        
		paraObj[j.substring(0,j.indexOf("=")).toLowerCase()] = j.substring(j.indexOf("=")+1,j.length);     
	}         
	var returnValue = paraObj[paras.toLowerCase()];        
	if(typeof(returnValue)=="undefined"){         
		return "";        
	}else{  
		return returnValue;   
	}  
}

function gotoPage(_page){
	url = "photosTeleCom.do";
	data = params+"&pageIndex="+_page;
	$.ajax({
		url : url,
		type : 'POST',
		data : data,
		dataType:"html",
		cache : false,
		success: function(text){
		$("#content").html(text);
		}
	});
}


$(document).ready(function(){ 
		var competitionArea = request("competitionArea"); 
		document.getElementById("competitionArea").value=competitionArea;
		if(request("pnum") != ""||request("unum") != ""){
			document.getElementById("pnum").innerText = request("pnum");
			document.getElementById("unum").innerText = request("unum");
		}
		
		var url = "${pageContext.request.contextPath}/photosTeleCom.do";

	/**
	 * 获取当前用户作品信息，显示在我的作品页面,不区分电信赛和全国赛用户。
	 * 当前用户user_id = sourceId=1
	 * 测试地址：http://localhost/syds/mh_myPhoto.jsp?sourceId=39a64dcf93294c3a9f4b6a909a3ff75d
	 * @return
	 */
	@RequestMapping(value="exhibition.do",produces="text/plain;charset=UTF-8;")  
	@ResponseBody
	public String exhibition(HttpServletRequest request){
		String file_path = CommonUtils.parseProperties("BASE_URL");
		String file_path_compress = file_path;
		file_path = file_path + "/files/thumbnail/";
		file_path_compress =file_path_compress +"/files/compress/";
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd", Locale.CHINA);
		String uploadDate = null;
		List<Map<String,String>> areaList = new ArrayList<Map<String,String>>(); 
		List<PhotoInfo> exhibition = null;
		exhibition = photoInfoServiceImpl.exhibition(); 		//全国作品展示
		Map<String,String> areaMap = new HashMap<String,String>();
		try{	
				for(PhotoInfo photoInfo : exhibition){ 
					uploadDate = sdf.format(photoInfo.getUploadDate());
					
					areaMap.put("key", "");
					areaMap.put("value", "{imgSrc :\""+file_path+photoInfo.getPhotoUrl()+"\",title :\""+
							photoInfo.getPhotoTitle()+"\",year:\""+uploadDate+"\",idPhoto : \""+photoInfo.getId()+
							"\",ImgBig:\""+file_path_compress+photoInfo.getPhotoUrl()+"\"}");
					areaList.add(areaMap);
				}
			}catch(Exception e){
				e.printStackTrace();
			}
				/**s
				 * var comics = [	{imgSrc : "cover4.jpg",title : "Captain Templates",year : "2010",isSelect : "1",idPhoto : "1b650eb61687436196554e1a7b0f14ef"}	,   
				{  
					imgSrc : "cover4.jpg",   
					title : "Captain Templates",   
					year : "2011",   
					number : "2"   
				}];   
				 */
		return CommonUtils.toJsonStr(areaList);
	}
	/**
	 * 获取当前用户作品信息，显示在我的作品页面,不区分电信赛和全国赛用户。
	 * 当前用户user_id = sourceId=1
	 * 测试地址：http://localhost/syds/mh_myPhoto.jsp?sourceId=39a64dcf93294c3a9f4b6a909a3ff75d
	 * @return
	 */
	@RequestMapping(value="getMyPhoto.do",produces="text/plain;charset=UTF-8;")  
	public String getMyPhoto(String userId,String photoType,String photoTitle,String pageIndex,ModelMap model){
		Page page = new Page();
		int pageNo = 1;
		if(pageIndex != null){
			try{
				pageNo = Integer.parseInt(pageIndex);
			}catch(Exception e){
				throw e;
			}
			page.setPageIndex(pageNo);
		}
		System.out.println("userId  photoType  photoTitle______________________————————————————————"+userId+photoType+photoTitle);
		PhotoInfo dto = new PhotoInfo();
		if(StringUtils.isNotBlank(userId)){
			dto.setUserId(userId);
		}
		if(StringUtils.isNotBlank(photoType)){
			dto.setPhotoType(photoType);
		}
 
		if(StringUtils.isNotBlank(photoTitle)){
			dto.setPhotoTitle(photoTitle);
		}		
		List<PhotoInfo>  PhotoList = photoInfoServiceImpl.findMyPhotosByPage(page,dto); 	//我的作品展示
		model.addAttribute("PhotoList",PhotoList);
		model.addAttribute("listSize",PhotoList.size());
		model.addAttribute("page",page);
		return "../photo_list";
	}
	/**
	 * 获取电信当前赛区作品信息

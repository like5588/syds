@charset "gb2312";
/* CSS Document */

body{
	font-family:Î¢ÈíÑÅºÚ;
	font-size:14px;
	padding:0;
	margin:0;
	
	}
ul,li{
	padding:0;
	margin:0;
	list-style:none;}
img{border:0;}

.yg_top{
	 width:100%;
     height:531px;
	 margin:0 auto;
	 background:url(../img/top_bg1.jpg) no-repeat center;}
.yg_topbutton{
	width:369px;
	height:120px;
	padding-top:400px;
	margin:0 auto;}
.yg_topbutton span{
	width:300px;
	height:19px;
	padding-left:80px;
	font-size:16px;
	}
.yg_menu_bg{
	width:100%;
	height:54px;
	background:#000;
	margin:0 auto;}
.yg_menu{
	width:1000px;
	height:54px;
	margin:0 auto;
	font-size:18px;
	color:#fff;
	}
.yg_menu ul li{
	float:left;
	text-align:center;
	line-height:54px;}
.yg_menu ul li a{
	width:120px;
	height:54px;
	display:block;
	color:#fff;
	border:none;
	text-decoration:none;
	}
.yg_menu ul li a:hover{
	background:#900;}
.yg_menu_login{
	width:620px;
	height:54px;
	text-align:right;
	float:left;
	color:#bebebe;}
.yg_menu_login a{
	color:#bebebe;
	font-size:14px;
	text-decoration:none;
	line-height:54px;}
.yg_menu_login a:hover{
	color:#fff;
	text-decoration:underline;}
.yg_33province_bg{
	background:url(../img/cen_bg.jpg);
	width:100%;
	_height:100px;
	min-height:100px;
	height:auto;
	overflow:hidden;
	margin:0 auto;
	}
.yg_33province{
	width:1026px;
	height:auto;
	margin:0 auto;}
.yg_33province  li{
	width:317px;
	height:253px;
	float:left;
	padding:8px 15px 16px 9px;
	background:url(../img/33s_bg.png) no-repeat;
	}
.yg_33province_list{
	width:317px;
	height:253px;
	}
.yg_33province_list a{
	color:#000;
	text-decoration:none;}
.jz{
	position:inherit;
	width:70px;
	height:75px;
	float:left;
	margin:0px 0px 0px 235px;
	}
.jz span{
	width:45px;
	height:40px;
	padding:30px 0px 0px 30px;
	display:block;
	color:#F00;
	font-size:20px;
	font-weight:bold;}
.yg_33province_number{
	width:290px;
	height:30px;
	padding:167px 0px 0px 15px;
	display:block;
	font-size:14px;
	line-height:40px;}
.yg_33province_color{
	color:#e10000;
	font-size:22px;
	font-weight:bold;
	}
.yg_33province_head{
	width:280px;
	height:60px;
	padding:0px 0px 0px 20px;
	line-height:60px;
	font-size:18px;
	color:#fff;}
	
.yg_introduction{
	width:1000px;
	height:auto;
	margin:0 auto;
	font-size:15px;
	line-height:28px;
	padding:20px 0px 0px 0px;}
	
.yg_introduction ul li{
	width:490px;
	height:auto;
	float:left;
	padding:30px 5px 0px 5px;}
.yg_introduction_title{
		width:98px;
		height:96px;
		padding:0px 10px 10px 0px;
		float:left;}
.yg_introduction_text{
	width:360px;
	height:100px;
	float:left;
	vertical-align:middle;}

.yg_foot{
	width:100%;
	margin:0 auto;
	height:100px;
	line-height:30px;
	clear:both;
	text-align:center;
	padding:10px 0px 10px 0px;
	background:#f1f1f1;}
	
	
	
	
	
	
	